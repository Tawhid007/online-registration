<p id="notice"><%= notice %></p>

<% if current_user.admin %>
    <h1>All the Registrations listed below:</h1>
<% else %>
    <h1>Your Registered courses are listed below:</h1>
<% end %>


<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>Registered in</th>
      <th>Registered by</th>
      <th>CGPA</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registers.each do |register| %>
    <tr>
      <td><%= register.course.course_name%></td>
      <td><%= register.semester.semester_name %></td>
      <td><%= register.user.email %></td>
      <td><%= register.cgpa %></td>
      <% if current_user.admin %>
          <td><%= link_to 'Show', register %></td>
          <td><%= link_to 'Edit', edit_register_path(register) %></td>
          <td><%= link_to 'Destroy', register, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%end%>


    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Register new courses', new_register_path %>
